programa {
  funcao inicio() {
    //Declaração de variáveis
    inteiro num1
    
    // Entrada de dados
    escreva("Digite um número inteiro: ")
    leia(num1)
    
    // Condicional par ou impar
    se (num1 % 2 == 0){
      escreva("número par")
    }
    senao{
      escreva("número impar")
    }
    fimse
  }
}
